<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Addition">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/questionNumber"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/firstNumber"
        android:layout_below="@+id/questionNumber"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/operation"
        android:layout_below="@+id/firstNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/secondNumber"
        android:layout_below="@+id/operation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal" />

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="3"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/firstNumber"
        android:layout_toRightOf="@+id/firstNumber"
        android:layout_toEndOf="@+id/firstNumber"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="1"
            android:id="@+id/one"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="2"
            android:id="@+id/two"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="3"
            android:id="@+id/three"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="4"
            android:id="@+id/four"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="5"
            android:id="@+id/five"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="6"
            android:id="@+id/six"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="7"
            android:id="@+id/seven"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="8"
            android:id="@+id/eigth"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="9"
            android:id="@+id/nine"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="Back"
            android:id="@+id/back"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="0"
            android:id="@+id/zero"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:text="="
            android:id="@+id/enter"
            android:layout_row="3"
            android:layout_column="2" />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/answer"
        android:layout_below="@+id/secondNumber"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/checkAnswer"
        android:layout_below="@+id/answer"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
